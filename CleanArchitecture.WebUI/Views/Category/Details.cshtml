@model CleanArchitecture.Application.DTOs.CategoryDTO;

@{
    ViewData["Title"] = "Categorie Detail";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-info">Back</a>
    <a asp-action="Delete" asp-route-id="@Model?.Id" title="Delete" class="btn btn-danger"></a>
</div>